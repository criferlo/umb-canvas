<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="2dip" />
         <stroke android:width="1dip" android:color="#603007" />
         <gradient android:angle="-90" android:startColor="#603007" android:endColor="#603007"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="2dip" />
         <stroke android:width="1dip" android:color="#924A0C" />
         <solid android:color="#924A0C"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="2dip" />
         <stroke android:width="1dip" android:color="#924A0C" />
         <gradient android:angle="-90" android:startColor="#924A0C" android:endColor="#924A0C" />            
     </shape>
 </item>
</selector>
